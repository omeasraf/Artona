{
    "manifest_version": 2,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",

    "icons": {
        "48": "icon-48.png",
        "96": "icon-96.png",
        "128": "icon-128.png",
        "256": "icon-256.png",
        "512": "icon-512.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [{
            "js": ["discord.js"],
            "css": ["discord.css"],
            "matches": [
                "*://*.discord.com/*",
                "*://discord.com/*"
            ]
        },
        {
            "js": ["youtube.js", "youtubeAdBlock.js"],
            "css": ["youtube.css"],
            "matches": [
                "*://*.youtube.com/*",
                "*://youtube.com/*"
            ]
        }
    ],

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "toolbar-icon-16.png",
            "19": "toolbar-icon-19.png",
            "32": "toolbar-icon-32.png",
            "38": "toolbar-icon-38.png"
        }
    },

    "permissions": [
        "activeTab",
        "<all_urls>",
        "tabs",
        "storage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
