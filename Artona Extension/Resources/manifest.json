{
    "manifest_version": 2,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",

    "icons": {
        "48": "icon-48.png",
        "96": "icon-96.png",
        "128": "icon-128.png",
        "256": "icon-256.png",
        "512": "icon-512.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

